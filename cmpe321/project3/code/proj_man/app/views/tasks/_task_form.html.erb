<%= form_for(@task, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', object: @task %>

  <div class="form-group">
    <label class="col-sm-1 control-label">NAME</label>
    <div class="col-sm-11"><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">START</label>
    <div class="col-sm-5"><%= f.date_select :start_date, start_year: Date.today.year, class: 'form-control' %></div>
    <label class="col-sm-1 control-label">DAYS</label>
    <div class="col-sm-2"><%= f.number_field :total_days, class: 'form-control' %></div>
    <div class="col-sm-3 text-right"><%= f.submit 'CREATE TASK', class: 'btn btn-primary' %></div>
  </div>

<% end %>