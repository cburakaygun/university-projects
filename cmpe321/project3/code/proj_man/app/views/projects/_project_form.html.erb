<%= form_for(@project, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', object: @project %>

  <div class="form-group">
    <label class="col-sm-2 control-label">NAME</label>
    <div class="col-sm-10"><%= f.text_field :name, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">START DATE</label>
    <div class="col-sm-5"><%= f.date_select :start_date, start_year: Date.today.year, class: 'form-control' %></div>
    <label class="col-sm-3 control-label">ESTIMATED TASK DAYS</label>
    <div class="col-sm-2"><%= f.number_field :task_days, class: 'form-control' %></div>
  </div>
  <div class="form-group">
    <div class="text-center"><%= f.submit 'CREATE PROJECT', class: 'btn btn-primary' %></div>
  </div>
<% end %>