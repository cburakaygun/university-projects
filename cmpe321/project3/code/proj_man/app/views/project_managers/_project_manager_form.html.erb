<%= form_for(@project_manager , html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/error_messages', object: @project_manager %>

  <div class="form-group">
    <label class="col-sm-2 control-label">USERNAME</label>
    <div class="col-sm-4 text-center"><%= f.text_field :username, class: 'form-control text-center' %></div>
    <label class="col-sm-2 control-label">PASSWORD</label>
    <div class="col-sm-4 text-center"><%= f.password_field :password, class: 'form-control text-center' %></div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">FIRST NAME</label>
    <div class="col-sm-4 text-center"><%= f.text_field :first_name, class: 'form-control text-center' %></div>
    <label class="col-sm-2 control-label">PASSWORD AGAIN</label>
    <div class="col-sm-4 text-center"><%= f.password_field :password_confirmation, class: 'form-control text-center' %></div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">LAST NAME</label>
    <div class="col-sm-4 text-center"><%= f.text_field :last_name, class: 'form-control text-center' %></div>
    <% if show_del_btn && user_admin? %>
      <div class="col-sm-3 text-center"><%= link_to 'DELETE PROJECT MANAGER', @project_manager, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></div>
    <% end %>
    <div class="text-center"><%= f.submit btn_text, class: 'btn btn-primary' %></div>
  </div>

<% end %>